{
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,

  "tailwindCSS.includeLanguages": {
    "css": "css",
    "postcss": "css",
    "javascript": "javascript",
    "javascriptreact": "javascript",
    "typescriptreact": "typescript"
  },

  "editor.quickSuggestions": {
    "strings": true
  },

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  "files.associations": {
    "*.css": "postcss"
  }
}
